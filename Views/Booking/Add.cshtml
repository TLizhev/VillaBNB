@model VillaBNB.Models.BookingViewModel

@{
    ViewData["Title"] = "Home Page";
}

<form method="post" class="col-md-6 offset-md-3"
      enctype="multipart/form-data">
    <h1>@this.ViewData["Title"]</h1>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="VillaName"></label>
        <select asp-for="VillaName" class="form-control">
            @foreach (var villa in Model.Villas)
            {
                <option value="@villa.Id">@villa.Name</option>
            }
        </select>
        <span asp-validation-for="VillaName" class="small text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PeopleCount"></label>
        <input asp-for="PeopleCount" class="form-control" />
        <span asp-validation-for="PeopleCount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TotalCost"></label>
        <input asp-for="TotalCost" class="form-control" />
        <span asp-validation-for="TotalCost" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" />
</form>
